<% content_for :title do %>
  <%= link_to @project, @project %>
  <i class='fa fa-angle-right'></i>
  <%= link_to @stack, project_stack_path(@stack.project, @stack) %>
  <i class='fa fa-angle-right'></i>
  <%= link_to 'People', members_project_stack_path(@project, @stack) %>
  <i class='fa fa-angle-right'></i>
  Add
<% end %>

<% content_for :submenu do %>
  <ul class="nav nav-pills pull-right">
    <li role="presentation"><a href="#discussion">Discussion</a></li>
    <li role="presentation"><a href="#notes">Notes</a></li>
    <li role="presentation">
      <%= link_to members_project_stack_path(@project, @stack) do %>
        People
      <% end %>
    </li>
    <li role="presentation">
      <%= link_to edit_project_stack_path(@project, @stack) do %>
        Settings
      <% end %>
    </li>
  </ul>
<% end %>

<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <h4 class="mb"><i class="fa fa-angle-right"></i> Add a user to <%= @stack.name %></h4>
      <%= form_tag(add_member_project_stack_path(@stack.project, @stack), class: 'form-horizontal style-form') do |f|  %>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">User</label>
          <div class="col-sm-10">
            <%= text_field_tag :users, '', placeholder: "Enter user email", class: 'form-control' %>
          </div>
        </div>
        <%= button "Add", 'Adding...' %>
      <% end %>
    </div>
  </div><!-- col-lg-12-->
</div><!-- /row -->
