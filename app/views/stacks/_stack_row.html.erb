<div class="row">

  <% stacks.compact.each do |stack| %>

    <div class="col-lg-3 col-md-3 col-sm-3 mb">
      <div class="white-panel pn">
        <div class="white-header">
          <%= link_to [@project, stack] do %>
            <h5>
              <%= stack.name %>
              &nbsp;
              <i class="fa fa-angle-double-right"></i>
            </h5>
          <% end %>
        </div>
        <div class='white-summary'>
          <% stack.users.uniq.take(10).each do |user| %>
            <%= gravatar_tag user.email, size: 39, html: {  class: 'img-circle', title: user } %>
            <% end %>
        </div>
        <div class="row">
          <div class="col-xs-4">
            <p class="small mt">TASKS</p>
            <p><%= stack.completed_tasks %></p>
          </div>
          <div class="col-xs-4">
            <p class="small mt">COMMENTS</p>
            <p>
              <%= stack.comments.count %>
              <%= unread_count(stack.unread_comments_count(current_user)) %>
            </p>
          </div>
          <div class="col-xs-4">
            <p class="small mt">FILES</p>
            <p><%= stack.files_count %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 white-progress">
            <div class="progress">
              <div class="progress-bar"  role="progressbar" aria-valuenow="<%= stack.completed_percentage %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= stack.completed_percentage %>%">
                <span class="sr-only"><%= stack.completed_percentage %>% Complete</span>
              </div>
            </div>
          </div>
        </div>
          <%# <%= link_to 'Open',  [@project, stack], class: 'btn btn-theme03' %>
          <%# <%= link_to 'Settings', edit_project_stack_path(@project.id, stack.id) %>
          <%# <%= link_to 'Members', members_project_stack_path(@project.id, stack.id) %>
      </div>
    </div><!-- /col-md-4 -->

  <% end %>

</div>
