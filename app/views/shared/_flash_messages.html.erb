<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> fade in" style='margin-top: 15px'>
    <button class="close" data-dismiss="alert">×</button>
    <%= message %>
  </div>
<% end %>

<% if false %>
  <div class="alert alert-danger fade in" style='margin-top: 15px'>
    <button class="close" data-dismiss="alert">×</button>
    Test message
  </div>
<% end %>
