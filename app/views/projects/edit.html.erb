<% content_for :title do %>
  <%= render "projects/header_link" %>

  <i class='fa fa-angle-right'></i>
  <%= link_to 'Settings', edit_project_path(@project) %>
<% end %>

<%= render 'form' %>

<div class='row mt'>
  <div class="col-lg-12 col-md-12 col-xs-12">
    <div class='showback'>
      <h4 class="mb"><i class="fa fa-angle-right"></i> Space usage</h4>
      <div class="progress">
        <div class="progress-bar progress-bar-<%= disk_usage_progress_bar_color @project.disk_usage_percentage %>" role="progressbar" aria-valuenow="<%= @project.disk_usage_percentage %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @project.disk_usage_percentage %>%">
          <%= number_to_human_size @project.total_file_size %> /
          <%= number_to_human_size @project.disk_usage_limit %>
        </div>
      </div>
      <p>Basic project file size limit is 100mb. </p>
      <p>If you need more space, please upgrade the project's plan below.</p>
    </div>
  </div>
</div>
