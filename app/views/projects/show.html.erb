<% content_for :title do %>
  <% unless @project.owner == current_user %>
    <%= @project.owner.human %>
    <i class='fa fa-angle-right'></i>
  <% end %>

  <%= @project.name %>
<% end %>

<div class="row mt">
  <div class="col-lg-12">

    <% if @stacks.any?  %>
      <% @stacks.in_groups_of(4).each do |stacks| %>

        <div class="row">

          <% stacks.compact.each do |stack| %>

            <div class="col-lg-3 col-md-3 col-sm-3 mb">
              <div class="white-panel pn">
                <div class="white-header">
                  <%= link_to [@project, stack] do %>
                    <h5>
                      <%= stack.name %>
                      &nbsp;
                      <i class="fa fa-angle-double-right"></i>
                    </h5>
                  <% end %>
                </div>
                <div class='white-summary'>
                  <% stack.users.take(10).each do |user| %>
                    <%= gravatar_tag user.email, size: 39, html: {  class: 'img-circle', title: user.email } %>
                    <% end %>
                </div>
                <div class="row">
                  <div class="col-xs-6">
                    <p class="small mt">TASKS</p>
                    <p><%= stack.completed_tasks %></p>
                  </div>
                  <div class="col-xs-6">
                    <p class="small mt">NOTES</p>
                    <p>0</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-10 col-xs-offset-1 white-progress">
                    <div class="progress">
                      <div class="progress-bar"  role="progressbar" aria-valuenow="<%= stack.completed_percentage %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= stack.completed_percentage %>%">
                        <span class="sr-only"><%= stack.completed_percentage %>% Complete</span>
                      </div>
                    </div>
                  </div>
                </div>
                  <%# <%= link_to 'Open',  [@project, stack], class: 'btn btn-theme03' %>
                  <%# <%= link_to 'Settings', edit_project_stack_path(@project.id, stack.id) %>
                  <%# <%= link_to 'Members', members_project_stack_path(@project.id, stack.id) %>
              </div>
            </div><!-- /col-md-4 -->

          <% end %>

        </div>

      <% end %>
    <% else %>
      <div class="alert alert-info">
        <b>You have no stacks!</b> Create one from the button below to start.
      </div>
    <% end %>

  </div>

  <div class='col-lg-12'>
    <%= link_to new_project_stack_path(@project), class: 'btn btn-lg btn-theme03' do %>
      Create stack
    <% end %>
  </div>
</div>
