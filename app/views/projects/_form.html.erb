<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <h4 class="mb"><i class="fa fa-angle-right"></i> Project</h4>
      <%= form_for(@project, html: { class: 'form-horizontal style-form'}) do |f|  %>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <%= render partial: 'shared/button', locals: { f: f } %>

        <% if @project.persisted? %>
          <div class='pull-right'>
            <%= link_to "Archive", archive_project_path(@project), method: :post, class: "btn btn-warning", data: { confirm: "Are you sure?" } %>
            <%= link_to "Delete", @project, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
          </div>
        <% end %>

      <% end %>
    </div>
  </div><!-- col-lg-12-->
</div><!-- /row -->
