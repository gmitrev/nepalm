<% content_for :title do %>
  Projects
<% end %>

<div class="row mt">
  <div class="col-lg-12">

    <% if @active_projects.any?  %>
      <% @active_projects.in_groups_of(4).each do |projects| %>

        <%= render partial: 'projects/projects_row', locals: { projects: projects } %>

      <% end %>
    <% else %>
      <div class="alert alert-info">
        <b>You have no Projects!</b> Create one from the button below to start.
      </div>
    <% end %>

  </div>

  <div class='col-lg-12'>
    <%= link_to new_project_path, class: 'btn btn-lg btn-theme03' do %>
      Create project
    <% end %>

    <% if @archived_projects.any? %>
      <%= link_to projects_path(@project, show: 'archived'), class: 'btn btn-lg btn-text' do %>
        Show archived projects (<%= @archived_projects.count %>)
      <% end %>
    <% end %>
  </div>
</div>
