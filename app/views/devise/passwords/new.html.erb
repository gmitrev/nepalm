<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-login', method: :post }) do |f| %>
  <h2 class="form-login-heading">Forgot your password?</h2>
  <div class="login-wrap">
    <%= devise_error_messages! %>

    <%= f.email_field :email,
      autofocus: true,
      class: 'form-control',
      placeholder: "Email",
      required: 'required '%>
    <br />

    <button class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i> Send me reset password instructions</button>
    <hr>

    <div class="registration">
      Don't have an account yet?
      <%= link_to "Create an account", new_registration_path(resource_name) %><br />

      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name) %><br />
    </div>

  </div>

<% end %>
