<% content_for :before_title do %>
  <%= @organization.name %>
<% end %>

<% content_for :title do %>
  <%= @organization.name %>
<% end %>

<div class="row mt">
  <% if @membership.errors.any? %>
    <div class='col-lg-12'>
      <div class='alert alert-danger'>
        <b>Oh snap!</b>

        <ul>
        <% @membership.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-lg-12">
    <div class="form-panel">
      <h4 class="mb"><i class="fa fa-angle-right"></i> <%= @user.email %></h4>
      <%= form_for(@membership, html: { class: 'form-horizontal style-form'}) do |f|  %>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Role</label>
          <div class="col-sm-10">
            <%= f.select :role, [["Admin", "admin"], ["User", "user"]], {}, class: "form-control" %>
          </div>
        </div>
        <button type="submit" class="btn btn-theme">Update</button>

        <div class='pull-right'>
          <%= link_to membership_path(@membership), method: :delete, class: 'btn btn-danger' do %>
            Remove from organization
          <% end %>
        </div>

      <% end %>
    </div>
  </div><!-- col-lg-12-->
</div><!-- /row -->
